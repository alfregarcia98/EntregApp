<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#2C2E40"
    tools:context=".ui.fragments.manageaddress.ManageAddress">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/addr1"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:hint="Direcci贸n principal: " />

            <TextView
                android:id="@+id/addr1_name"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:hint="nombre" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/addr2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:hint="Direcci贸n secundaria: " />

            <TextView
                android:id="@+id/addr2_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:hint="nombre" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/addr3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:hint="Tercera direcci贸n: " />

            <TextView
                android:id="@+id/addr3_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:hint="nombre" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/addr4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:hint="Cuarta direcci贸n: " />

            <TextView
                android:id="@+id/addr4_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:hint="nombre" />
        </LinearLayout>

        <Button
            android:id="@+id/btn_borrar"
            android:layout_gravity="center"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Eliminar tracking" />


        <Button
            android:id="@+id/btn_enviar"
            android:layout_gravity="center"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Enviar estadisticas" />

        <Button
            android:id="@+id/btn_chart"
            android:layout_gravity="center"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Ver estadisticas" />

    </LinearLayout>
</FrameLayout>
