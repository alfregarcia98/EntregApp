<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.RegisterActivity">

<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#E2F0D9"
    android:orientation="vertical">

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="187dp"
        android:layout_height="137dp"
        android:layout_gravity="center"
        android:layout_marginTop="50dp"
        app:srcCompat="@drawable/icon" />
    <EditText
        android:id="@+id/usuario"
        android:layout_width="300dp"
        android:minHeight="40dp"
        android:paddingLeft="10dp"
        android:textColorHint="#A9D18E"
        android:textColor="#61953D"
        android:background="@drawable/custom_input"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="20dp"
        android:ems="10"
        android:inputType="text"
        android:hint="Usuario"/>

    <EditText
        android:id="@+id/phone"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="20dp"
        android:background="@drawable/custom_input"
        android:ems="10"
        android:hint="Teléfono"
        android:inputType="phone"
        android:minHeight="40dp"
        android:paddingLeft="10dp"
        android:textColor="#61953D"
        android:textColorHint="#A9D18E" />

    <EditText
        android:id="@+id/email"
        android:layout_width="300dp"
        android:minHeight="40dp"
        android:paddingLeft="10dp"
        android:textColorHint="#A9D18E"
        android:textColor="#61953D"
        android:background="@drawable/custom_input"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="20dp"
        android:ems="10"
        android:inputType="text"
        android:hint="Correo electrónico"/>

    <EditText
        android:id="@+id/contrasena"
        android:layout_width="300dp"
        android:minHeight="40dp"
        android:paddingLeft="10dp"
        android:textColorHint="#A9D18E"
        android:textColor="#61953D"
        android:background="@drawable/custom_input"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="20dp"
        android:ems="10"
        android:inputType="textPassword"
        android:hint="Contraseña"/>
    <EditText
        android:id="@+id/contrasena2"
        android:layout_width="300dp"
        android:minHeight="40dp"
        android:paddingLeft="10dp"
        android:textColorHint="#A9D18E"
        android:textColor="#61953D"
        android:background="@drawable/custom_input"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="20dp"
        android:ems="10"
        android:inputType="textPassword"
        android:hint="Repita contraseña"/>

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/btn_registrar_correo"
        android:layout_width="300dp"
        android:background="@drawable/custom_button"
        android:textColor="#FFFFFF"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="20dp"
        android:textAllCaps="false"
        android:text="REGISTRAR" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="20dp"
        android:layout_height="match_parent"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/textView"
            android:layout_gravity="top"
            android:layout_width="wrap_content"
            android:textSize="20dp"
            android:textColor="#70AD47"
            android:layout_height="wrap_content"
            android:text="¿Ya tienes una cuenta?" />

        <TextView
            android:id="@+id/btn_loginNow"
            android:layout_width="match_parent"
            android:layout_gravity="top"
            android:textSize="20dp"
            android:textStyle="bold"
            android:textColor="#70AD47"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:text="Inicia sesión" />
    </LinearLayout>



</LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>